<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cse.fet.gurukul.SponsorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/hpc"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_below="@+id/card1"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="20dp"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/znetlive"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_below="@+id/card2"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/made"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_below="@+id/card3"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/cl"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_below="@+id/card4"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/zebronics"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/card5"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                android:clipToPadding="true"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:src="@drawable/es"
                    android:layout_width="300dp"
                    android:layout_height="120dp" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>